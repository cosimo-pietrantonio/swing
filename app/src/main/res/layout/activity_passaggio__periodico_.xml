<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RichiestaPeriodicaScrolling_Activity">


    <EditText
        android:id="@+id/etLuogoArrivoOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Dove vuoi arrivare?"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etOraPartenzaO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLuogoPartenzaF" />

    <EditText
        android:id="@+id/etLuogoPartenzaOP"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Da dove vuoi partire?"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etLuogoArrivoO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bOffriPeriodico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Offri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbDom" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <EditText
        android:id="@+id/etOraPartenzaOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Ora usuale"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/cbLun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLuogoArrivoO" />

    <CheckBox
        android:id="@+id/cbLun"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        android:text="Lunedì"
        app:layout_constraintBottom_toTopOf="@+id/cbGio"
        app:layout_constraintEnd_toStartOf="@+id/cbMar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOraPartenzaO" />

    <CheckBox
        android:id="@+id/cbMar"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="5dp"
        android:text="Martedì"
        app:layout_constraintBottom_toTopOf="@+id/cbVen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOraPartenzaO" />

    <CheckBox
        android:id="@+id/cbMer"
        android:layout_width="106dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        android:text="Mercoledì"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbMar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <CheckBox
        android:id="@+id/cbGio"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:text="Giovedì"
        app:layout_constraintEnd_toStartOf="@+id/cbVen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbLun" />

    <CheckBox
        android:id="@+id/cbVen"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="274dp"
        android:text="Venerdì"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbMar" />

    <CheckBox
        android:id="@+id/cbSab"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="269dp"
        android:text="Sabato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/cbVen"
        app:layout_constraintTop_toBottomOf="@+id/cbMer" />

    <CheckBox
        android:id="@+id/cbDom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="28dp"
        android:text="Domenica"
        app:layout_constraintBottom_toTopOf="@+id/bOffriPeriodico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbGio" />


</androidx.constraintlayout.widget.ConstraintLayout>