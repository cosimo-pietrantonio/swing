<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RichiestaPeriodicaScrolling_Activity">



    <EditText
        android:id="@+id/etLuogoArrivoO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="143dp"
        android:ems="10"
        android:hint="Dove vuoi arrivare?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLuogoPartenzaO" />

    <EditText
        android:id="@+id/etLuogoPartenzaO"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="143dp"
        android:ems="10"
        android:hint="Da dove vuoi partire?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bOffriPeriodico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="256dp"
        android:text="Offri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="548dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <EditText
        android:id="@+id/etOraPartenzaO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="148dp"
        android:ems="10"
        android:hint="Ora usuale"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLuogoArrivoO" />

    <CheckBox
        android:id="@+id/cbLun"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="40dp"
        android:text="Lunedì"
        app:layout_constraintEnd_toStartOf="@+id/cbMar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOraPartenzaO" />

    <CheckBox
        android:id="@+id/cbMar"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="26dp"
        android:text="Martedì"
        app:layout_constraintBottom_toTopOf="@+id/cbVen"
        app:layout_constraintEnd_toStartOf="@+id/cbMer"
        app:layout_constraintTop_toBottomOf="@+id/etOraPartenzaO"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/cbMer"
        android:layout_width="106dp"
        android:layout_height="25dp"
        android:layout_marginEnd="25dp"
        android:text="Mercoledì"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbGio"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:text="Giovedì"
        app:layout_constraintEnd_toStartOf="@+id/cbVen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbLun" />

    <CheckBox
        android:id="@+id/cbVen"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:text="Venerdì"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="403dp" />

    <CheckBox
        android:id="@+id/cbSab"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="306dp"
        android:text="Sabato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbVen"
        app:layout_constraintTop_toBottomOf="@+id/cbMer" />

    <CheckBox
        android:id="@+id/cbDom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="60dp"
        android:text="Domenica"
        app:layout_constraintBottom_toTopOf="@+id/bPubblica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbGio"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>