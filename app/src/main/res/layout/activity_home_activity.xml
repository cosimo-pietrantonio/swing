<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".Home_activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/notifiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_action_notifica"
            app:backgroundTint="@color/cardview_light_background"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/profilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_action_profile"
            app:backgroundTint="@color/cardview_light_background"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/principale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            app:backgroundTint="@color/yellow"
            android:src="@drawable/ic_action_menu" />

    </LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/fragment_ricerca"
        android:layout_width="318dp"
        android:layout_height="720dp"
        android:layout_gravity="right"
        android:layout_marginTop="56dp"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/ricerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="270"
            android:text="RICHIESTA"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#3F51B5"
            android:singleLine="true"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_offerta"
        android:layout_width="90dp"
        android:layout_height="720dp"
        android:layout_marginTop="56dp"
        android:background="#3F51B5">

        <TextView
        android:id="@+id/offerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rotation="270"
        android:text="OFFERTA"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:singleLine="true" />


    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
