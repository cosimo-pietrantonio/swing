<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:alpha="1">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        >

        <EditText
            android:id="@+id/partenza_offerta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:alpha="1"
            android:hint="Partenza"></EditText>

        <EditText
            android:id="@+id/destinazione_offerta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:alpha="1"
            android:hint="Destinazione"></EditText>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/tv_Data_offerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:text="Data"
            android:clickable="true">
        </TextView>

        <TextView
            android:id="@+id/tv_ora_offerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="140dp"
            android:textSize="16sp"
            android:text="Ora"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/tv_posti_offerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="posti"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="230dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_offerta"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="70dp"
            android:alpha="0" />
        <TextView
            android:id="@+id/giorni_offerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giorni"
            android:layout_marginTop="150dp"
            android:textSize="16sp"
            android:layout_marginLeft="25dp"
            android:alpha="0"
            android:enabled="false"/>

        <EditText
            android:id="@+id/et_data_offerta"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:editable="false"
            />

        <EditText
            android:id="@+id/et_ora_offerta"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="125dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:editable="false"
            />

        <EditText
            android:id="@+id/et_posti_offerta"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="225dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:editable="false"
            />
    </androidx.cardview.widget.CardView>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Abbonamento" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:text="Prezzo:"
            android:textSize="20sp"/>


        <EditText
            android:id="@+id/prezzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="75dp"
            android:ems="10"
            android:inputType="numberDecimal"/>
    </androidx.cardview.widget.CardView>



</FrameLayout>